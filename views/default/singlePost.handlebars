<div class="row">
    <div class="col-lg-8">
        <h1 class="mt-4">{{post.title}}</h1>
        <p class="lead">
            by
            <a href="#">Admin</a>
        </p>
        <hr>
        <!-- Date/Time -->
        <p>Posted on {{post.creationDate}}</p>
        <hr>
        <!-- Preview Image -->
        <img class="img-fluid rounded" src="{{post.file}}" alt="">
        <hr>
        <!-- Post Content -->
        <p class="lead">{{{post.description}}}</p>

        <hr>

        <!-- Comments Form -->
        <div class="card my-4">
            <h5 class="card-header">Leave a Comment:</h5>
            <div class="card-body">
                <form action="/post/{{post._id}}" method="post">
                    <div class="form-group">
                        <textarea class="form-control" rows="3" name="comment_body"></textarea>
                        <input type="hidden" name="id" value="{{post._id}}">
                    </div>
                    <button type="submit" class="btn btn-primary">Submit</button>
                </form>
            </div>
        </div>
        {{#each post.comments}}
        {{#if commentisapproved}}
            <div class="media mb-4">
                <img class="d-flex mr-3 rounded-circle" src="http://placehold.it/50x50" alt="">
                <div class="media-body">
                    <h5 class="mt-0">{{user.firstname}} {{user.lastname}}</h5>
                    {{body}}
                </div>
            </div>
            {{/if}}
        {{/each}}

        <!-- Single Comment -->



    </div>

    <!-- Sidebar Widgets Column -->
    <div class="col-md-4">

        <!-- Search Widget -->
        <div class="card my-4">
            <h5 class="card-header">Search</h5>
            <div class="card-body">
                <div class="input-group">
                    <input type="text" class="form-control" placeholder="Search for...">
                    <span class="input-group-btn">
                        <button class="btn btn-secondary" type="button">Go!</button>
                    </span>
                </div>
            </div>
        </div>


        <!-- Categories Widget -->
        <div class="card my-4">
            <h5 class="card-header">Categories</h5>
            <div class="card-body">
                <div class="row">
                    <div class="col-lg-6">
                        <ul class="list-unstyled mb-0">
                            {{#each categories}}
                            <li><a href="#">{{title}}</a></li>
                            {{/each}}
                        </ul>
                    </div>
                </div>
            </div>
        </div>

    </div>

</div>