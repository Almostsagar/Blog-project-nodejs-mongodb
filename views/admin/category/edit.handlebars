<div class="container">
    <h3 class="alert alert-dark p-3 text-center text-dark">Edit categories</h3>


    {{!-- <hr> --}}

    <div class="row p-4">
        <div class="col-md-10">
            <form action="/admin/categories/create" method="post">
            <div class="form-group">
                <label for="title">Title</label>
                <input type="text" name="title" id="category-title" class="form-control" value="{{category.title}}" autofocus>
                <input type="hidden" name="id" id="category-id" class="form-control" value="{{category._id}}">
            </div>
            <button type="submit" class="btn btn-outline-warning btn-lg" id="update-category-button">Update Category</button>
            </form>
        </div>
    </div>
</div>