<div class="container">
    <h3 class="alert alert-dark p-3 text-center text-dark">All categories</h3>

    <div class="row">
        <div class="col-6 mx-auto">
            <table class="table table-bordered text-center border-success text-white">
                <thead class="bg-primary">
                    <tr>
                        <th>Title</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody class="table-hover bg-dark category-list">
                    {{#each categories}}
                    <tr>
                        <td>{{title}}</td>
                        <td class="d-flex justify-content-center">
                            <a href="/admin/categories/edit/{{_id}}" class="btn btn-sm btn-warning mr-2">Edit</a>
                            <form action="/admin/categories/delete/{{_id}}?newMethod=DELETE" method="post">
                                <button class="btn btn-sm btn-danger" type="submit">Delete category</button>
                            </form>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
    
    <hr>

    <div class="row p-4">
        <div class="col-md-10">
            <form action="/admin/categories/create" method="post" id="createForm">
            <div class="form-group">
                <label for="title">Title</label>
                <input type="text" name="title" id="category-title" class="form-control" placeholder="Enter title" required autofocus>
            </div>
            <button type="submit" class="btn btn-outline-success btn-lg" id="create-category-button">Create Category</button>
            <button type="reset" class="btn btn-outline-info btn-lg" id="clr-category-button" onclick="submit_form();">Clear</button>
            </form>
        </div>
    </div>
</div>
